[Unit]
Description=euro 2.0 sprayer bot server

[Service]
User=sprayer-bot
WorkingDirectory=/opt/sprayer-bot
ExecStart=/usr/bin/java -Xmx512m -javaagent:/opt/sprayer-bot/newrelic/newrelic.jar -jar sprayer-bot-0.0.1-SNAPSHOT.jar
TimeoutStopSec=10
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

